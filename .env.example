# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=leadflowai
DB_USER=leadflowai
DB_PASSWORD=leadflowai_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_ISSUER=LeadFlowAI
JWT_AUDIENCE=LeadFlowAI
JWT_EXPIRATION_MINUTES=480

# LLM Configuration (OpenAI)
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_PROVIDER=OpenAI
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1500

# RD Station
RDSTATION_CLIENT_ID=your-rdstation-client-id
RDSTATION_CLIENT_SECRET=your-rdstation-client-secret
RDSTATION_WEBHOOK_SECRET=your-webhook-secret

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+5511999999999

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@leadflowai.com
EMAIL_FROM_NAME=LeadFlowAI

# Application
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Worker
WORKER_CONCURRENCY=5
WORKER_RETRY_ATTEMPTS=3
WORKER_RETRY_DELAY_SECONDS=30
